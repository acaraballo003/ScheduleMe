<div class = "welcome">
  <div class="welc-form">

    <h1 class="welc-title">Welcome to {{title}}</h1>

    <form class="pure-form pure-form-stacked user-form" action="/login" method="post">
      <fieldset>
        
        <label for="username">Username</label>
        <input class="user-input" id="username" name="username" type="text">

        <label for="password">Password</label>
        <input class="user-input" id="password" type="password" name="password">

        <button type="submit" class="pure-button pure-button-primary front-btn">Login</button>
      </fieldset>
    </form>

  </div>
</div>
