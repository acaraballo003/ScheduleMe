<div class="home-container">

  <div class="left">
    <h3>Hello, {{userName}}!</h3>


    <div class="class-form">

      <form class="pure-form pure-form-stacked" action="/classes" method="post">
        <fieldset>
          <legend>New Class</legend>

          <label for="title">Title</label>
          <input id="title" name="title" type="text" placeholder="Class Title">

          <label for="start_time">Start Time</label>
          <input id="start_time" type="time" name="start_time" min="08:00" value="08:00" required>

          <label for="end_time">End Time</label>
          <input id="end_time" type="time" name="end_time" max="21:00" required>

          <label>Days the Class Takes Place</label>
            <label for="days"><input class="weekdays" id="days" name="days" value=1 type="checkbox">Monday</label>
            <label for="days"><input class="weekdays" id="days" name="days" value=2 type="checkbox">Tuesday</label>
            <label for="days"><input class="weekdays" id="days" name="days" value=3 type="checkbox">Wednesday</label>
            <label for="days"><input class="weekdays" id="days" name="days" value=4 type="checkbox">Thursday</label>
            <label for="days"><input class="weekdays" id="days" name="days" value=5 type="checkbox">Friday</label>

          <button type="submit" class="pure-button pure-button-primary add-class-btn">Add Class</button>
        </fieldset>
      </form>

    </div>

  </div>


  <div class="user-classes">
    <p>{{userName}}'s classes</p>
    <ul>
      {{#each classes as |class|}}
      <li>{{class.title}}: {{class.start_time}} - {{class.end_time}}</li>
      {{/each}}
    </ul>

    <form class="delete-btn" method="POST" action="/home?_method=DELETE">
      <button class="pure-button" type="submit" name="delete-btn">Delete Your Class List</button>
    </form>
  </div>



</div>
